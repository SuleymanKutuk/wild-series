{% extends "base.html.twig" %}

{% block title  %}Série #
	{{ program.id}}
{% endblock %}


{% block body %}
	<div class="media">
		<img classe="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title}} poster">
		<div class="media_body">
			<h1 class="mt-0">
				{{ program.title}}</h1>
			<p>{{program.synopsis}}</p>
			<p>
				Catégorie :
				{{ program.category.name }}</p>

			<ul>
				{% for season in seasons %}
					<li>
						<h2>{{season.number}}</h2>
					</li>

					<a href="{{ path ("program_season_show", {programId: program.id, seasonId: season.id})}}">Voir les saisons
					</a>
				{% endfor %}

			</ul>
		</div>
	</div>
	<a href="{{ path ('program_index')}}">Retour à la liste des programes</a>


{% endblock %}
