{% extends "base.html.twig" %}

{% block title  %}Série #
	{{ program.id}}
{% endblock %}


{% block body %}
	<div class="media">
		<img classe="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title}} poster">
		<div class="media_body">
			<h1 class="mt-0">
				{{ program.title}}</h1>
			<p>{{program.synopsis}}</p>
			<p>
				Catégorie :
				{{ program.category.name }}</p>

			<ul>
				{% for season in seasons %}
					<li>
						<h2>La saison -
							{{season.number}}
						</h2>
						<p>{{season.description}}</p>
					</li>


					<a href="{{ path ("program_season_show", {programId: program.id, seasonId: season.id})}}">Voir la saison
					</a>

				{% endfor %}

			</ul>
		</div>
		<strong>Acteurs :</strong>
		<ul>
			{% for actor in program.actors %}
				<li>{{ actor.name }}</li>
			{% else %}
				<li>Aucun acteur pour cette série</li>
			{% endfor %}
		</ul>
	</div>
	<a href="{{ path ('program_index')}}">Retour à la liste des programes</a>


{% endblock %}
