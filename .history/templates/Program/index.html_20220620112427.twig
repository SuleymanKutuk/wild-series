{% extends 'base.html.twig' %}

{% block title %}
	All programs
{% endblock %}

{% block body %}
	<a class="btn btn-outline-dark" href="{{ path('program_new') }}">Ajouter une série</a>
	<h1>
		Toute les séries de la table program :
	</h1>
	{% for program in programs %}

		<div>
			<h2>
				{{ loop.index }}
				/
				{{program.title}}
				- Catégorie :
				{{ program.category.name }}
			</h2>

			<p>
				{{ program.synopsis }}
			</p>
			<a href="{{path ("program_show", { id: program.id})}}">
				Voir la fiche
			</a>

		</div>
	{% else %}
		Aucune série trouvée.

	{% endfor %}

	<strong>Acteurs :</strong>
	<ul>
		{% for actor in program.actors %}
			<li>{{ actor.name }}</li>
		{% else %}
			<li>Aucun acteur pour cette série</li>
		{% endfor %}
	</ul>
	<a href=" {{ path ('app_index')}}">
		Retour a l'accueil</a>
{% endblock %}
